}

@Article{ClassificationPolSARSegmentsMinimizationWishartDistances,
	Title                    = {Classification of Segments in {PolSAR} Imagery by Minimum Stochastic Distances Between {W}ishart Distributions},
	Author                   = {W. B. Silva and C. C. Freitas and S. J. S. Sant'Anna and A. C. Frery},
